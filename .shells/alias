# Cute shell shortcuts
alias ls='ls --sort=extension --color=auto'
alias ll='ls -lh'
alias lal='ls -alh'
alias la='ls -A'
alias pms='sudo pm-suspend'
alias psg='ps -A | grep'
alias se='sudo gvim'
alias e='gvim'
alias grep='grep --color -n'
alias smi='sudo make install'
alias l='ls -CF'

# This one is to take care of make
# Give me a nice, distinguishable make output
alias make='clear && make'
alias m='make'


# Some more, to avoid mistakes
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'


# SSH Alias
alias wp='ssh manhnd@172.16.2.250'
alias manhnd='ssh root@manhnd.com'

# Add and Commit are used as functions
alias gpo='git push orig'
alias gp='git pull'
alias gs='git status'
alias gd='git-diff'
alias gr='git-reflog'
alias glf='git-ls-files'


# Shortcut to test quick changes to bashrc
alias reload='source ~/.bashrc'


